            br
            span.nv &nbsp;&nbsp;$wc
            span.p .
            span.n Headers
            span.p [
            span.s2 "User-Agent"
            span.p ]&nbsp;
            span.p \=&nbsp;
            span.s2 "PowerShell/"&nbsp;
            span.p +&nbsp;
            span.nv $PSVersionTable
            span.p [
            span.s2 "PSVersion"
            span.p ].
