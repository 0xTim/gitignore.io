              i.icon-windows.icon-light
            |  Windows
          h4 Crate a PowerShell v3 Script
          pre.highlight
            span.c #For PowerShell v3
            br
            span.k Function&nbsp;
            span.nb gi&nbsp;
            span.p {
            br
            span.k &nbsp;&nbsp;param
            span.p (
            br
            span.p &nbsp;&nbsp;&nbsp;&nbsp;[
            span.k Parameter
            span.p (
            span.k Mandatory
            span.p \=
            span.nv $true
            span.p )]
            br
            span.no &nbsp;&nbsp;&nbsp;&nbsp;[string[]]
            span.nv $list
            br
            span.p &nbsp;&nbsp;)
            br
            span.nv &nbsp;&nbsp;$params&nbsp;
            span.p \=&nbsp;
            span.nv $list&nbsp;
            span.n -join&nbsp;
            span.s2 ","
            br
            span.nb &nbsp;&nbsp;invoke-WebRequest&nbsp;
            span.n -Uri&nbsp;
            span.s2 "http://gitignore.io/api/$params"&nbsp;
            span.p |&nbsp;
            span.n select&nbsp;
            span.n -expandproperty&nbsp;
            span.n content&nbsp;
            span.p |&nbsp;
            span.nb out-file&nbsp;
            span.n -FilePath&nbsp;
            span.p $(
            span.nb join-path&nbsp;
            span.n -path&nbsp;
            span.nv $pwd&nbsp;
            span.n -ChildPath&nbsp;
            span.s2 ".gitignore"
            span.p )&nbsp;
            span.n -Encoding&nbsp;
            span.n ascii
            br
            span.p }
