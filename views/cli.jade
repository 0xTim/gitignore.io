  section#install.padtop
    .well.section-well(style='background-position: 50% -82px;')
      .container.center-text
        .row
          .col-lg-12
            .social
              h1 Command Line Installation
              h4 <small>To run gitignore.io from your command line you need an active internet connection an environment function.  You need to add a function to your environment that lets you access the gitignore.io API.</small>
    .container
      .row
        .col-lg-12
          .alert.alert-warning On January 6th, 2014 gitignore.io  moved to Heroku which doesn't allow naked domains.  If your <code>gi</code> command is not functioning, update your script to point to <code>www.gitignore.io</code> instead of <code>gitignore.io</code>
      .row
        .col-lg-12
          h3.git-logo Git
          p #!/bin/bash
          pre.highlight
            span.nv $&nbsp;
            span.nb git config --global alias.test '!gi() { curl http://www.gitignore.io/api/$@ ;}; gi'
          h3.tux-logo Linux
          p #!/bin/bash
          pre.highlight
            span.nv $&nbsp;
            span.nb echo&nbsp;
            span.s2 "function gi() { curl http://www.gitignore.io/api/\$@ ;}"&nbsp;
            | >> ~/.bashrc&nbsp;
            span.o &&&nbsp;
            span.nb source&nbsp;
            | ~/.bashrc
          h3.spacer.apple-logo OSX
          p #!/bin/bash
          pre.highlight
            span.nv $&nbsp;
            span.nb echo&nbsp;
            span.s2 "function gi() { curl http://www.gitignore.io/api/$@ ;}"&nbsp;
            | >> ~/.bash_profile&nbsp;
            span.o &&&nbsp;
            span.nb source&nbsp;
            | ~/.bash_profile
          p #!/bin/zsh
          pre.highlight
            span.nv $&nbsp;
            span.nb echo&nbsp;
            span.s2 "function gi() { curl http://www.gitignore.io/api/$@ ;}"&nbsp;
            | >> ~/.zshrc&nbsp;
            span.o &&&nbsp;
            span.nb source&nbsp;
            | ~/.zshrc
          h3.spacer.windows-logo Windows
          p Create a PowerShell v3 Script
          pre.highlight
            span.c #For PowerShell v3
            br
            span.k Function&nbsp;
            span.nb gi&nbsp;
            span.p {
            br
            span.k &nbsp;&nbsp;param
            span.p (
            br
            span.p &nbsp;&nbsp;&nbsp;&nbsp;[
            span.k Parameter
            span.p (
            span.k Mandatory
            span.p \=
            span.nv $true
            span.p )]
            br
            span.no &nbsp;&nbsp;&nbsp;&nbsp;[string[]]
            span.nv $list
            br
            span.p &nbsp;&nbsp;)
            br
            span.nv &nbsp;&nbsp;$params&nbsp;
            span.p \=&nbsp;
            span.nv $list&nbsp;
            span.n -join&nbsp;
            span.s2 ","
            br
            span.nb &nbsp;&nbsp;invoke-WebRequest&nbsp;
            span.n -Uri&nbsp;
            span.s2 "http://www.gitignore.io/api/$params"&nbsp;
            span.p |&nbsp;
            span.n select&nbsp;
            span.n -expandproperty&nbsp;
            span.n content&nbsp;
            span.p |&nbsp;
            span.nb out-file&nbsp;
            span.n -FilePath&nbsp;
            span.p $(
            span.nb join-path&nbsp;
            span.n -path&nbsp;
            span.nv $pwd&nbsp;
            span.n -ChildPath&nbsp;
            span.s2 ".gitignore"
            span.p )&nbsp;
            span.n -Encoding&nbsp;
            span.n ascii
            br
            span.p }
          p Create a PowerShell v2 Script
          pre.highlight
            span.c #For PowerShell v2
            br
            span.k Function&nbsp;
            span.nb gi&nbsp;
            span.p {
            br
            span.k &nbsp;&nbsp;param
            span.p (
            span.p &nbsp;&nbsp;&nbsp;&nbsp;[
            span.k Parameter
            span.p (
            span.k Mandatory
            span.p \=
            span.nv $true
            span.p )]
            br
            span.no &nbsp;&nbsp;&nbsp;&nbsp;[string[]]
            span.nv $list
            br
            span.p &nbsp;&nbsp;)
            span.nv &nbsp;&nbsp;$params&nbsp;
            span.p \=&nbsp;
            span.nv $list&nbsp;
            span.n -join&nbsp;
            span.s2 ","
            br
            span.nv &nbsp;&nbsp;$wc&nbsp;
            span.p \=&nbsp;
            span.nb New-Object&nbsp;
            span.n System
            span.p .
            span.n Net
            span.p .
            span.n WebClient
            br
            span.nv &nbsp;&nbsp;$wc
            span.p .
            span.n Headers
            span.p [
            span.s2 "User-Agent"
            span.p ]&nbsp;
            span.p \=&nbsp;
            span.s2 "PowerShell/"&nbsp;
            span.p +&nbsp;
            span.nv $PSVersionTable
            span.p [
            span.s2 "PSVersion"
            span.p ].
            span.n ToString
            span.p ()
            br
            span.nv &nbsp;&nbsp;$wc
            span.p .
            span.n DownloadFile
            span.p (
            span.s2 "http://www.gitignore.io/api/$params"
            span.p ,&nbsp;
            span.s2 "$PWD\.gitignore"
            span.p )
            br
            span.p }
